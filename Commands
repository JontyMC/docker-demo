Docker

docker ps -a
docker images -a
docker rm --force `docker ps -qa`
docker rmi $(docker images --filter "dangling=true" -q --no-trunc)

API

docker build -t demo/hello_world .
docker run -t -d -P --name hello_world demo/hello_world
docker port hello_world
docker run -t -d -p 80:5004 --name hello_world demo/hello_world
docker run -t -d -p 80:5004 --name hello_world -v `pwd`:/app demo/hello_world

Redis

docker run --name redis -d -p 6379:6379 redis
docker run -it --link redis:redis --rm redis sh -c 'exec redis-cli -h "$REDIS_PORT_6379_TCP_ADDR" -p "$REDIS_PORT_6379_TCP_PORT"'